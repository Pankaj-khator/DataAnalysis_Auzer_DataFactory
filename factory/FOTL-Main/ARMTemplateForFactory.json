{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "FOTL-Main"
		},
		"AuzerSQL_Sales_DB_link_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'AuzerSQL_Sales_DB_link'"
		},
		"AzureSql_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'AzureSql'"
		},
		"Azure_Data_Lake_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Azure_Data_Lake'"
		},
		"Azure_Databricks1_accessToken": {
			"type": "secureString",
			"metadata": "Secure string for 'accessToken' of 'Azure_Databricks1'"
		},
		"AuzerSQL_Sales_DB_link_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "pankaj.database.windows.net"
		},
		"AuzerSQL_Sales_DB_link_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "Sales"
		},
		"AuzerSQL_Sales_DB_link_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "pankaj"
		},
		"AzureSql_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "pankaj.database.windows.net"
		},
		"AzureSql_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "Sales"
		},
		"AzureSql_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "pankaj"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Sales_Product_Transfer_to_storage')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Storing Product Table in Data storage ",
				"activities": [
					{
						"name": "SalesProductTransfer",
						"description": "Storing Product Table in Data storage ",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "1.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "AzureSqlSource",
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "AzureTableSink",
								"azureTableInsertType": "replace",
								"writeBatchSize": 10000
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "AzureSqlTable1",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "AzureTable1",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": [],
				"lastPublishTime": "2025-11-08T05:01:49Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/AzureSqlTable1')]",
				"[concat(variables('factoryId'), '/datasets/AzureTable1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureSqlTable1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Product Table From Sales",
				"linkedServiceName": {
					"referenceName": "AuzerSQL_Sales_DB_link",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "level_0",
						"type": "bigint",
						"precision": 19
					},
					{
						"name": "index",
						"type": "bigint",
						"precision": 19
					},
					{
						"name": "product_id",
						"type": "bigint",
						"precision": 19
					},
					{
						"name": "product_name",
						"type": "varchar"
					},
					{
						"name": "brand_id",
						"type": "bigint",
						"precision": 19
					},
					{
						"name": "category_id",
						"type": "bigint",
						"precision": 19
					},
					{
						"name": "model_year",
						"type": "bigint",
						"precision": 19
					},
					{
						"name": "list_price",
						"type": "float",
						"precision": 15
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "products"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AuzerSQL_Sales_DB_link')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureTable1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "Azure_Data_Lake",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureTable",
				"schema": [],
				"typeProperties": {
					"tableName": "products"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/Azure_Data_Lake')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AuzerSQL_Sales_DB_link')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"server": "[parameters('AuzerSQL_Sales_DB_link_properties_typeProperties_server')]",
					"database": "[parameters('AuzerSQL_Sales_DB_link_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('AuzerSQL_Sales_DB_link_properties_typeProperties_userName')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('AuzerSQL_Sales_DB_link_password')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureSql')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"server": "[parameters('AzureSql_properties_typeProperties_server')]",
					"database": "[parameters('AzureSql_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('AzureSql_properties_typeProperties_userName')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('AzureSql_password')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/Azure_Data_Lake')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Connection of Data Storage Lake ",
				"annotations": [],
				"type": "AzureTableStorage",
				"typeProperties": {
					"connectionString": "[parameters('Azure_Data_Lake_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/Azure_Databricks1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "First Data Brick connection",
				"annotations": [],
				"type": "AzureDatabricks",
				"typeProperties": {
					"domain": "https://adb-2065609314171077.17.azuredatabricks.net",
					"accessToken": {
						"type": "SecureString",
						"value": "[parameters('Azure_Databricks1_accessToken')]"
					},
					"newClusterNodeType": "Standard_DS4_v2",
					"newClusterNumOfWorker": "1:2",
					"newClusterVersion": "10.4.x-scala2.12",
					"clusterOption": "Autoscaling",
					"newClusterInitScripts": []
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/Every_Day')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "Sales_Product_Transfer_to_storage",
							"type": "PipelineReference"
						},
						"parameters": {}
					},
					{
						"pipelineReference": {
							"referenceName": "Top_Customers_by_SalesValue",
							"type": "PipelineReference"
						},
						"parameters": {}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Day",
						"interval": 1,
						"startTime": "2025-11-07T20:14:00",
						"timeZone": "Eastern Standard Time"
						"startTime": "2025-11-10T20:14:00",
						"timeZone": "Eastern Standard Time",
						"schedule": {}
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/Sales_Product_Transfer_to_storage')]"
				"[concat(variables('factoryId'), '/pipelines/Sales_Product_Transfer_to_storage')]",
				"[concat(variables('factoryId'), '/pipelines/Top_Customers_by_SalesValue')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Top_Customers_by_SalesValue')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Customers by Total Sales Value",
				"activities": [
					{
						"name": "Top_Customers_by_SalesValue",
						"description": "Top_Customers_by_SalesValue",
						"type": "DatabricksNotebook",
						"dependsOn": [],
						"policy": {
							"timeout": "1.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"notebookPath": "/Users/ppankaj21@ncstudents.niagaracollege.ca/DataAnalysis_Auzer_DataFactory/Databricks/Connecting_Auzer_and_Databricks"
						},
						"linkedServiceName": {
							"referenceName": "Azure_Databricks1",
							"type": "LinkedServiceReference"
						}
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/Azure_Databricks1')]"
			]
		}
	]
}
